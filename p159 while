for i in range(0,3,1):
    print("%d: 안녕하세요? for문을 공부중입니다.^^" %i)


i=0
while  i<3:
    print("%d: 안녕하세요? while 문을 공부 중입니다.^^" %i)
    i=i+1

i,hap=0,0

i=1

while i<11:
    hap=hap+i
    i=i+1

print("1에서 10까지의 합계: %d" %hap)

# 무한 합계 
hap=0
a,b=0,0

while True:
    a=int(input("더할 첫 번째 수를 입력하세요:"))
    b=int(input("더할 두 번째 수를 입력하세요:"))
    hap=a+b
    print("%d+%d=%d"%(a,b,hap))

# $을 입력해서 계산기에서 빠져나가기
# 무한 합계
hap=0
a,b=0,0

while True:
    a=input("더할 첫 번째 수를 입력하세요:")
    if a=="$":
        break
    else:
        a=int(a)

    b=int(input("더할 두 번째 수를 입력하세요:"))
    hap=a+b
    print("%d+%d=%d"%(a,b,hap))

print("$을 입력해 반복문을 탈출했습니다.") 

